{
	"name": "@warren-bank/scrabble",
	"description": "Multi user crossword game",
	"version": "3.1.3",
	"type": "module",
	"author": {
		"name": "Crawford Currie",
		"url": "https://github.com/cdot"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/cdot/Xanado"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"files": [
		"audio/*.mp3",
		"bin/*.js",
		"css/*.css",
		"css/*.json",
		"dictionaries/*.dict",
		"dictionaries/index.json",
		"dist/*.html",
		"dist/**/*",
		"editions/*.json",
		"games/README",
		"html/*.html",
		"i18n/*.json",
		"images/*",
		"src/*/*.js",
		"package.json",
		"package-lock.json",
		"README.md"
	],
	"license": "MIT",
	"dependencies": {
		"@cdot/cbor": "latest",
		"@cdot/dictionary": "latest",
		"async-lock": "latest",
		"bcrypt": "latest",
		"express": "latest",
		"express-session": "latest",
		"nodemailer": "latest",
		"passport": "latest",
		"passport-facebook": "latest",
		"passport-google-oauth20": "latest",
		"posix-getopt": "latest",
		"proper-lockfile": "latest",
		"session-file-store": "latest",
		"socket.io": "latest",
		"web-worker": "latest"
	},
	"importmap": "./build/importmap.json",
	"devDependencies": {
		"@rwap/jquery-ui-touch-punch": "latest",
		"@wikimedia/jquery.i18n": "latest",
		"c8": "latest",
		"chai": "latest",
		"chai-http": "latest",
		"docdash": "latest",
		"eslint": "latest",
		"eslint-plugin-import": "latest",
		"jquery": "latest",
		"jquery-ui": "latest",
		"jsdoc": "latest",
		"jsdom": "latest",
		"marked": "latest",
		"mocha": "latest",
		"normalize.css": "latest",
		"socket.io-client": "latest",
		"tmp-promise": "latest",
		"webpack": "latest",
		"webpack-cli": "latest"
	},
	"scripts": {
		"build": "node bin/update-indexes.js & webpack -c build/wp_sa_games.js & webpack -c build/wp_sa_game.js & webpack -c build/wp_cl_games.js & webpack -c build/wp_cl_game.js",
		"server": "node bin/server.js",
		"start": "node bin/server.js",
		"debug": "node bin/server.js --config config.json --debug all",
		"doc": "jsdoc -c build/jsdoc_config.json src",
		"lint": "eslint src -f unix",
		"test": "mocha --recursive --extension js --timeout=5000 test",
		"coverage": "NODE_ENV=test c8 --reporter=html --reporter text npm run test",
		"tx": "node bin/checkStrings.js",
		"update": "ncu -u ",
		"docker": "npm run build; docker build . --tag xanado --file build/Dockerfile"
	},
	"bin": {
		"scrabble": "./bin/server.js"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"parserOptions": {
			"sourceType": "module",
			"ecmaVersion": 2022
		},
		"env": {
			"shared-node-browser": true,
			"jquery": true,
			"es2021": true
		},
		"globals": {
			"assert": "writable"
		},
		"plugins": [
			"import"
		],
		"rules": {
			"camelcase": 0,
			"curly": 0,
			"dot-notation": 1,
			"import/no-unresolved": "error",
			"import/named": "error",
			"import/namespace": "error",
			"import/default": "error",
			"import/export": "error",
			"import/no-named-as-default": "warn",
			"import/no-named-as-default-member": "warn",
			"import/no-duplicates": "warn",
			"import/first": 0,
			"new-cap": 0,
			"no-alert": 0,
			"no-console": 0,
			"no-debugger": 0,
			"no-eval": 0,
			"no-fallthrough": 0,
			"no-global-assign": 0,
			"no-loop-func": 1,
			"no-mixed-spaces-and-tabs": 0,
			"no-new": 0,
			"no-prototype-builtins": 0,
			"no-redeclare": [
				"error",
				{
					"builtinGlobals": false
				}
			],
			"no-trailing-spaces": 1,
			"no-underscore-dangle": 0,
			"no-unused-vars": 1,
			"no-useless-escape": 1,
			"no-use-before-define": 0,
			"quotes": 0,
			"strict": 0
		}
	}
}
